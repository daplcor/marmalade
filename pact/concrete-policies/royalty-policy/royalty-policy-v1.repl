(begin-tx "start an offer")

(env-hash (hash "offer-royalty-0"))
(use marmalade-v2.ledger)
(use marmalade-v2.util-v1)

(env-data {
  "seller-guard": {"keys": ["account"], "pred": "keys-all"}
})

(coin.create-account "k:account" (read-keyset 'seller-guard))
